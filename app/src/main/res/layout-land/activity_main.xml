<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="Overdraw">

    <TextView
        android:id="@+id/values_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/actionButton"
        android:layout_gravity="start"
        android:textSize="30sp"
        android:ellipsize="start"
        android:textIsSelectable="true"
        android:singleLine="true"
        android:padding="16dp"
        android:textDirection="anyRtl"
        android:layoutDirection="rtl"
        android:textAlignment="viewStart"
        />

    <TextView
        android:id="@+id/result_tv"
        android:layoutDirection="rtl"
        android:textAlignment="viewStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_gravity="start"
        android:ellipsize="start"
        android:textSize="40sp"
        android:singleLine="true"
        android:textIsSelectable="true"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:text="@string/zero"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clear_tv"
                style="@style/ActionButtonStyleOne"
                android:text="@string/clear" />

            <TextView
                android:id="@+id/delete_tv"
                style="@style/ActionButtonStyleOne"
                android:text="@string/delete"/>

            <TextView
                android:id="@+id/percent_tv"
                style="@style/ActionButtonStyleOne"
                android:text="@string/percent"/>

            <TextView
                android:id="@+id/divide_tv"
                style="@style/ActionButtonStyleOne"
                android:text="@string/divide" />

            <TextView
                android:id="@+id/multiply_tv"
                style="@style/ActionButtonStyleTwo"
                android:text="@string/multiply"/>


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/six"
            style="@style/NumbersButtonStyle"
            android:text="@string/six" />

        <TextView
            android:id="@+id/seven"
            android:text="@string/seven"
            style="@style/NumbersButtonStyle"/>

        <TextView
            android:id="@+id/eight"
            style="@style/NumbersButtonStyle"
            android:text="@string/eight"/>

        <TextView
            android:id="@+id/nine"
            style="@style/NumbersButtonStyle"
            android:text="@string/nine"/>

        <TextView
            android:id="@+id/add_tv"
            style="@style/ActionButtonStyleTwo"
            android:text="@string/add" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/two"
            style="@style/NumbersButtonStyle"
            android:text="@string/two" />

        <TextView
            android:id="@+id/three"
            style="@style/NumbersButtonStyle"
            android:text="@string/three" />

        <TextView
            android:id="@+id/four"
            android:text="@string/four"
            style="@style/NumbersButtonStyle"/>

        <TextView
            android:id="@+id/five"
            style="@style/NumbersButtonStyle"
            android:text="@string/five"/>

        <TextView
            android:id="@+id/subtract_tv"
            style="@style/ActionButtonStyleTwo"
            android:text="@string/subtract"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/point_tv"
            android:text="@string/point"
            style="@style/NumbersButtonStyle"/>

        <TextView
            android:id="@+id/zero"
            style="@style/NumbersButtonStyle"
            android:text="@string/zero"/>


        <TextView
            android:id="@+id/one"
            android:text="@string/one"
            style="@style/NumbersButtonStyle"/>

        <TextView
            android:id="@+id/equals_tv"
            style="@style/EqualButtonStyle"
            android:text="@string/equals" />

    </LinearLayout>

    </LinearLayout>
</LinearLayout>